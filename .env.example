# Database connection environment variables
# Copy this file to .env and fill in your actual values

# MySQL Database Host (default: localhost)
DB_HOST=localhost

# MySQL Database Port (default: 3306)
DB_PORT=3306

# MySQL Database Username (default: root)
DB_USERNAME=root

# MySQL Database Password (required)
DB_PASSWORD=your_password_here

# MySQL Database Name (required)
DB_NAME=your_database_name

# Server Configuration
# Port for the HTTP server (default: 8080)
SERVER_PORT=8080

# Example usage:
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=myapp_user
# DB_PASSWORD=secure_password123
# DB_NAME=myapp_database
# SERVER_PORT=8080